<div class="banner">
    <h1>CookBook</h1>
  </div>
</div>

<div class="container w-75">
  <div class="info-top">
    <h2>List of Categories</h2>
    <%= link_to "New Category", new_category_path, class: "btn btn-warning" %>
  </div>

  <div class="cards" class="card-category">
    <% @categories.each do |category| %>
      <%= link_to category_path(category) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.2))">
          <div style="text-align: center">
            <h3><%= category.name %></h3>
            <p><%= category.bookmarks.count %> recipes</p>
          </div>
        </div>
      <% end %>

    <% end %>
  </div>
</div>
