<h1><%= @category.name %></h1>

<%= link_to "Add a Recipe", new_category_bookmark_path(@category), class: "btn btn-success mb-4" %>

<div class="row">
  <% @category.recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <%= image_tag recipe.image_url, class: "card-img-top", alt: recipe.name if recipe.image_url.present? %>
        <div class="card-body">
          <h5 class="card-title"><%= recipe.name %></h5>
          <p class="card-text"><%= truncate(recipe.description, length: 100) %></p>
          <p class="card-text"><strong>Rating:</strong> <%= recipe.rating %>/10</p>
          <%= link_to "Delete", bookmark_path(recipe.bookmarks.find_by(category: @category)), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Back to Categories", categories_path, class: "btn btn-secondary mt-4" %>
